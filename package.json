{
    "name": "nexus",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "turbo watch build --filter='@nexus/web^...' & turbo dev --filter=@nexus/web",
        "build": "turbo build",
        "lint": "turbo lint",
        "test": "turbo test",
        "check": "turbo run lint build test",
        "test:e2e": "turbo test:e2e",
        "typecheck": "turbo typecheck",
        "env:pull": "vercel env pull apps/web/.env.local"
    },
    "devDependencies": {
        "prettier": "^3.8.0",
        "turbo": "^2.7.2"
    },
    "license": "ISC",
    "packageManager": "pnpm@10.26.2",
    "pnpm": {
        "onlyBuiltDependencies": [
            "sharp",
            "unrs-resolver"
        ],
        "ignoredBuiltDependencies": [
            "esbuild"
        ]
    }
}

{
    "name": "@nexus/db",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "types": "./src/index.ts"
        },
        "./schema": {
            "import": "./src/schema/index.ts",
            "types": "./src/schema/index.ts"
        },
        "./repo/files": {
            "import": "./src/repositories/files.ts",
            "types": "./src/repositories/files.ts"
        },
        "./repo/jobs": {
            "import": "./src/repositories/jobs.ts",
            "types": "./src/repositories/jobs.ts"
        },
        "./repo/retrievals": {
            "import": "./src/repositories/retrievals.ts",
            "types": "./src/repositories/retrievals.ts"
        },
        "./repo/webhooks": {
            "import": "./src/repositories/webhooks.ts",
            "types": "./src/repositories/webhooks.ts"
        },
        "./testing": {
            "import": "./src/testing.ts",
            "types": "./src/testing.ts"
        }
    },
    "scripts": {
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:studio": "drizzle-kit studio",
        "db:custom": "drizzle-kit generate --custom --name",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "drizzle-orm": "^0.45.1",
        "postgres": "^3.4.7"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@vitest/coverage-v8": "^4.0.18",
        "dotenv": "^17.2.3",
        "drizzle-kit": "^0.31.8",
        "typescript": "^5",
        "vitest": "^4.0.18"
    }
}

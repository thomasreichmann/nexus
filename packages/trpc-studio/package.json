{
    "name": "trpc-devtools",
    "version": "0.1.5",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/thomasreichmann/nexus.git",
        "directory": "packages/trpc-studio"
    },
    "homepage": "https://github.com/thomasreichmann/nexus/tree/main/packages/trpc-studio#readme",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./server": {
            "import": "./dist/server.js",
            "types": "./dist/server.d.ts"
        },
        "./styles.css": "./dist/styles.css"
    },
    "files": [
        "dist",
        "LICENSE"
    ],
    "scripts": {
        "dev": "pnpm build:standalone && concurrently \"tailwindcss -i src/styles/globals.css -o dist/styles.css --watch\" \"tsup --config tsup.lib.config.ts --watch\"",
        "build": "pnpm build:clean && pnpm build:standalone && pnpm build:lib",
        "build:clean": "rm -rf dist",
        "build:standalone": "mkdir -p dist/standalone && tailwindcss -i src/styles/globals.css -o dist/standalone/app.css --minify && tsup --config tsup.standalone.config.ts",
        "build:lib": "tailwindcss -i src/styles/globals.css -o dist/styles.css --minify && tsup --config tsup.lib.config.ts",
        "test": "vitest",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/",
        "prepublishOnly": "pnpm build"
    },
    "peerDependencies": {
        "@trpc/server": "^11.0.0",
        "next": "^14.0.0 || ^15.0.0 || ^16.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0",
        "zod": "^4.0.0"
    },
    "optionalDependencies": {
        "better-auth": "^1.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@tailwindcss/cli": "^4.0.0",
        "@trpc/server": "^11.0.0",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "concurrently": "^9.0.0",
        "eslint": "^9.39.2",
        "eslint-plugin-react-hooks": "^7.0.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "tailwindcss": "^4.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.54.0",
        "vite": "^6.1.0",
        "vitest": "^4.0.0",
        "zod": "^4.2.0"
    },
    "dependencies": {
        "@emotion/is-prop-valid": "^1.4.0",
        "clsx": "^2.1.1",
        "framer-motion": "^12.29.2",
        "lucide-react": "^0.562.0",
        "tailwind-merge": "^3.0.2"
    }
}

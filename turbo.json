{
    "$schema": "https://turbo.build/schema.json",
    "globalPassThroughEnv": ["*"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "dist/**"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "lint": {},
        "test": {},
        "test:coverage": {
            "outputs": ["coverage/**"]
        },
        "test:e2e": {
            "cache": false
        },
        "typecheck": {
            "dependsOn": ["^typecheck"]
        }
    }
}
